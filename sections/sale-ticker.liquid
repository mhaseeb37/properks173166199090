<style>
 .vertical-border {
    display: block;
    height: 40px;
    margin: auto;
  
    background: #ffffff;
    min-width: 0.5px;
}
@media screen and (max-width: 767px){
  .ticker-next svg, .ticker-prev svg {
    width: 14px !important;
  }
}
  </style>
<section class="ticker-section">
  <div class="ticker-container">
    <div class="ticker-inner">
      {% for block in section.blocks %}
        <div class="ticker-slide">
          <div class="ticker-announcement">
            <p>{{ block.settings.announcement }}</p>
            <a href="{{ block.settings.url }}">{{ block.settings.url-text }}</a>
          </div>
        </div>
        {% if forloop.index > 0 and forloop.index < forloop.length  %}
          <div class="vertical-border" id="vertical-border"></div>
        {% endif %}
      {% endfor %}
    </div>
    <button class="ticker-prev" aria-label="Previous">{% render "icon" , icon_name: "chevron"%}</button>
    <button class="ticker-next" aria-label="Next">{% render "icon" , icon_name: "chevron"%}</button>
  </div>
</section>

<style>
  .ticker-section {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px 0;
  }
  .ticker-prev svg path{
    fill:white;
  }
   .ticker-next svg path{
    fill:white;
  } 
  .ticker-prev svg{
   width:17px;
  }
   .ticker-next svg {
    width:17px;
  }
  .ticker-prev svg {
    width: 17px;
    transform: rotate(180deg);
    display: block;
}


  .ticker-container {
    background-color: {{section.settings.background-color}};
    width: 90%;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    position: relative;
    overflow: hidden;
  }

  .ticker-inner {
    display: flex;
    justify-content: space-evenly;
    transition: transform 0.3s ease-in-out;
    width: 100%;
  }

  .ticker-slide {
    flex: 0 0 50%;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .ticker-announcement {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: white;
    padding: 10px 0;
    text-align: center;

  }

  .ticker-announcement p {
    font-weight: 600!important;
    font-size: 12px;
  }

  .ticker-announcement a {
    font-size: 11px;
  }

  .ticker-prev,
  .ticker-next {
    display: none;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    border: none;
    color: white;
    background:transparent;
    cursor: pointer;
    z-index: 10;
  }

  .ticker-prev {
    left: 10px;
  }

  .ticker-next {
    right: 10px;
  }

   .vertical-border {
    display: block;
    height: 40px;
    margin: auto;
  
    background: #ffffff;
    min-width: 0.5px;
}

.ticker-announcement p{
  font-weight:500;
}
  @media (max-width: 550px) {
    .ticker-container {
      padding:15px 0;
    }
    .ticker-announcement{
      gap:2px;
    }
    .ticker-prev,
    .ticker-next {
      display: block;
    }

    .ticker-inner {
      width: auto; 
    }

    .ticker-slide {
      flex: 0 0 100%;
    }

    .vertical-border {
      display: none;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const tickerInner = document.querySelector('.ticker-inner');
    const prevButton = document.querySelector('.ticker-prev');
    const nextButton = document.querySelector('.ticker-next');
    const slides = document.querySelectorAll('.ticker-slide');
    const border = document.getElementById("vertical-border")
    let currentIndex = 0;
    const totalSlides = slides.length;

    if(totalSlides < 2){
      border.style.display = "none";
    }

  

    function updateCarousel() {
      tickerInner.style.transform = `translateX(-${currentIndex * 100}%)`;
    }

    function showNext() {
      if (currentIndex < totalSlides - 1) {
        currentIndex++;
      } else {
        currentIndex = 0;
      }
      updateCarousel();
    }

    function showPrev() {
      if (currentIndex > 0) {
        currentIndex--;
      } else {
        currentIndex = totalSlides - 1;
      }
      updateCarousel();
    }

    
    function checkCarousel() {
      if (window.innerWidth <= 550 && totalSlides > 1) {
        prevButton.style.display = 'block';
        nextButton.style.display = 'block';
      } else {
        prevButton.style.display = 'none';
        nextButton.style.display = 'none';
        tickerInner.style.transform = 'translateX(0)';
      }
    }

    prevButton.addEventListener('click', showPrev);
    nextButton.addEventListener('click', showNext);

    window.addEventListener('resize', checkCarousel);

    checkCarousel();
  });
</script>

