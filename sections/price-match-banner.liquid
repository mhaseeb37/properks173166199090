<section class="banner-info-{{ section.id }}">
  <div class="banner-info-wrapper container container--full-screen section-spacing container--with-aside-paddings">
    <div class="banner-info-row">
      <div class="overlay"></div>
      <div class="img-wrapper-banner">
        <img class="banner-desk" src="{{ section.settings.bg | img_url: 'master' }}">
        <img class="banner-mob" src="{{ section.settings.mob-bg | img_url: 'master' }}">
      </div>
      {% if section.settings.heading != blank %}
      <div class="info-details-banner">
        <h2>{{ section.settings.heading }}</h2>
        <a href="{{ section.settings.link }}">
          {{ section.settings.btn }}
        </a>
      </div>
      {% endif %}
    </div>
  </div>
</section>


<style>
.banner-info-{{ section.id }} {
  width: 100%;
  position: relative;
  margin-top: {{ section.settings.padding-top }}px;
  margin-bottom: {{ section.settings.padding-bottom }}px;
}

.banner-info-row {
  position: relative;
}

.banner-info-{{ section.id }} .overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: {{ section.settings.overlay_opacity }};
  z-index: 1; 
  display: block;
  border-radius: 16px;
}

.banner-info-{{ section.id }} .img-wrapper-banner {
  width: 100%;
}

.banner-info-{{ section.id }} .img-wrapper-banner img {
  width: 100%;
  height: {{ section.settings.height }}px;
  object-fit: cover;
  object-position: center;
  border-radius: 16px;
}

.banner-info-{{ section.id }} .info-details-banner {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  z-index: 2; 
  width: 100%;
}

.banner-info-{{ section.id }} .info-details-banner h2 {
  font-style: normal;
  font-weight: 600;
  font-size: 32px;
  line-height: 50px;
  color: #FFFFFF;
  font-family: "Inter", sans-serif;
  padding-bottom: 30px;
  margin: 0;
}

.banner-info-{{ section.id }} .info-details-banner a {
  display: inline-block;
  text-decoration: none;
  background-color: #fff;
  color: #000; 
  font-family: 'Inter';
  font-style: normal;
  font-weight: 600;
  font-size: 15px;
  line-height: 125%;
  width: 157px;
  padding: 15px 0px;
  border-radius: 16px;
}

@media(min-width: 769px){
  .banner-info-{{ section.id }} .banner-mob{
    display: none;
  }
 .banner-info-{{ section.id }} .banner-desk{
    display: block;
  }
}
  
@media(max-width: 768px){
 .banner-info-{{ section.id }} .info-details-banner h2{
font-size: 20px;
font-weight: 600;
line-height: 30px;
text-align: center;

  }
 .banner-info-{{ section.id }} .img-wrapper-banner img {
  width: 100%;
  height: {{ section.settings.mob-height }}px;
  object-fit: cover;
  object-position: center;
}
 .banner-info-{{ section.id }} .banner-mob{
    display: block;
  }
 .banner-info-{{ section.id }} .banner-desk{
    display: none;
  }

}
  
</style>

