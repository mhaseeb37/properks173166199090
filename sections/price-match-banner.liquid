    "name": "Banner Info",
    "settings": [
      {
         "type": "range",
         "id": "padding-top",
         "label": "Padding Top",
         "default": 20,
         "min": 0,
         "max": 100,
         "step": 1,
         "unit": "px"
      },
      {
         "type": "range",
         "id": "padding-bottom",
         "label": "Padding Bottom",
         "default": 20,
         "min": 0,
         "max": 100,
         "step": 1,
         "unit": "px"
      },
      {
         "type": "image_picker",
         "id": "bg",
         "label": "Background Image"
      },
      {
         "type": "image_picker",
         "id": "mob-bg",
         "label": "Background Mobile Image"
      },
      {
         "type": "range",
         "id": "height",
         "label": "Height",
         "default": 320,
         "min": 100,
         "max": 700,
         "step": 10,
         "unit": "px"
       },
       {
         "type": "range",
         "id": "mob-height",
         "label": "Mobile Height",
         "default": 230,
         "min": 100,
         "max": 700,
         "step": 10,
         "unit": "px"
       },
       {
         "type": "text",
         "id": "heading",
         "label": "Heading"
       },
       {
         "type": "text",
         "id": "btn",
         "label": "Button Label"
       },
       {
         "type": "url",
         "id": "link",
         "label": "Button Link"
       },
       {
        "type": "range",
        "id": "overlay_opacity",
        "label": "Overlay Opacity",
        "default": 0,
        "min": 0,
        "max": 1,
        "step": 0.1
      }
    ],
  "presets": [
    {
      "name": "Banner Info"
    }
  ]
}
{% endschema %}