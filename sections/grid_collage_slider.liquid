<div class="main_collage_slider_inner">
  <div class="inner_main_collage_slider">
    <div class="inner_blk_main swiper">
      <div class="swiper-wrapper">
      {% for block in section.blocks %}
     
        <div class="blk_main swiper-slide">
       
         <div class="blk_collage_inner_m main_bl-{{ block.id }}">
           {% if block.settings.first_image != blank %}
           <div class="blk_first_image firstimg_{{ block.id }}" style=" padding-left:{{block.settings.left_padding}}px; padding-right:{{block.settings.right_padding}}px; padding-top:{{block.settings.top_padding}}px; padding-bottom:{{block.settings.bottom_padding}}px;">
             <img src="{{ block.settings.first_image | image_url }}">
           </div>
             {% endif %}
           {% if block.settings.second_image != blank %}
           <div class="blk_second_image_m secimg_{{ block.id }}" style=" padding-left:{{block.settings.left_padding_sec}}px;padding-right:{{block.settings.right_padding_sec}}px; padding-top:{{block.settings.top_padding_sec}}px; padding-bottom:{{block.settings.bottom_padding_sec}}px;">
            <img src="{{ block.settings.second_image | image_url }}">
           </div>
           {% endif %}
         </div>
        
        
          
         
       
       
        </div>
      {% endfor %}
      </div>
    </div>
  </div>
</div>
<script>
document.addEventListener("DOMContentLoaded", function() {
    const swiperMain = new Swiper('.inner_blk_main', {
        speed: 4000,
        loop: true,
        slidesPerView: 1,
         slidesPerGroup: 1,
        centeredSlides: false,
        spaceBetween: 10,
        freeMode: true,
        autoplay: {
            delay: 1, 
           
        },
        breakpoints: {
            520: {
                slidesPerView: 1.2
            },
            768: {
                slidesPerView: 2
            },
            1024: {
                slidesPerView: 4
            }
        },
    });
});
</script>

