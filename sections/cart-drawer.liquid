                                  <span class='cart-drawer-subtotal__sale-item-amount'>
                                    {% if show_currency_code %}
                                      {{- total_compare_at_price | money_with_currency | prepend: '-' -}}
                                    {% else %}
                                      {{- total_compare_at_price | money | prepend: '-' -}}
                                    {% endif %}
                                  </span>
                                </div>
                              {% endif %}
