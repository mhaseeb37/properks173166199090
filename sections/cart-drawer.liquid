                        <div class='cart-drawer-subtotal__note'>
                          <cart-note>
                            <textarea
                              class='textarea cart-drawer-subtotal__tax-note-textarea'
                              name='note'
                              id='CartDrawerNote'
                              form='CartDrawerForm'
                              placeholder='{{ 'general.subtotal.store_front.placeholder_for_textarea_for_order_note' | t }}'
                              data-cart-note-textarea
                            >{{ cart.note }}</textarea>
                          </cart-note>
                        </div>
                      </div>
                    </div>
                  </accordeon-component>
                {%- endif -%}
                <div class='cart-drawer-subtotal__main-content'>
                  <div>
                    {% if full_price > cart.total_price %}
                      <div
                        class='cart-drawer-subtotal__subtotals'
                        data-subtotals
                      >
                        <accordeon-component
                          class='cart-drawer-subtotal__sale'
                          data-aria-expanded='true'
                        >
                          <accordeon-button class='cart-drawer-subtotal__sale-label' tabindex='0'>
                            <span class='cart-drawer-subtotal__sale-label-name'>
                              {{-
                                'general.subtotal.store_front.label_for_subtotal_price_html'
                                | t: count: cart.item_count
