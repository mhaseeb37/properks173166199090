                                          <div class='shape shape--{{ img_ratio }}'>
                                            <button
                                              type='button'
                                              class='carousel-btn card-carousel__carousel-btn card-carousel__carousel-btn--next'
                                              data-direction='next'
                                              tabindex='0'
                                              disabled
                                            >
                                              {%- render 'icon', icon_name: 'chevron', class: 'carousel-btn__icon' -%}
                                            </button>
                                          </div>
                                        </div>
                                      {% else %}
                                        <button
                                          type='button'
                                          class='carousel-btn card-carousel__carousel-btn card-carousel__carousel-btn--prev'
                                          data-direction='prev'
                                          tabindex='0'
                                          disabled
                                        >
                                          {% render 'icon', icon_name: 'chevron', class: 'carousel-btn__icon x-flip' %}
                                        </button>

                                        <button
                                          type='button'
                                          class='carousel-btn card-carousel__carousel-btn card-carousel__carousel-btn--next'
                                          data-direction='next'
                                          tabindex='0'
                                          disabled
                                        >
                                          {%- render 'icon', icon_name: 'chevron', class: 'carousel-btn__icon' -%}
                                        </button>
                                      {% endif %}
                                    {% endif %}
                                  </slider-grid>
                                </div>
                              {%- endif -%}
                            </div>
                          </cart-drawer-related-products-block>
                        {% when 'in_cart_banner' %}
                          <cart-drawer-in-cart-banner-block
                            class='cart-drawer__block color-{{ block.settings.color_scheme }}'
                            block-id='{{ block.id }}'
                            {{ block.shopify_attributes }}
                          >
                            {%- unless cart == empty and block.settings.hide_for_empty_cart -%}
                              <div class='cart-drawer__in-cart-banner-wrapper'>
                                {% render 'in-cart-banner',
                                  section: section,
                                  block: block,
                                  class: 'cart-drawer__in-cart-banner'
                                %}
                              </div>
                            {%- endunless -%}
                          </cart-drawer-in-cart-banner-block>
                        {% when 'items' %}
                          <cart-drawer-items-block
                            class='cart-drawer__block cart-drawer__block--items'
                            block-id='{{ block.id }}'
                            {{ block.shopify_attributes }}
                          >
                            {%- if cart.items.size > 0 -%}
                              <form
                                class='cart-drawer__items'
                                action='{{ routes.cart_url }}'
                                method='post'
                                id='CartDrawerForm'
                              >
                                {%- for item in cart.items -%}
                                  {% render 'cart-item', item: item, img_ratio: options.img_ratio %}
                                {%- endfor -%}
                              </form>
                            {%- endif -%}
                          </cart-drawer-items-block>
                      {% endcase %}
                    {% endfor %}
                  </div>
                {% endif %}
              </div>
            </div>
            <cart-drawer-footer class='cart-drawer__footer'>
              <notification-component class='notification cart-drawer__notification' id='CartDrawerNotification'>
                <div class='notification__overlay'></div>
                <div class='notification__body'>
                  <div
                    class='alert notification__alert'
                    role='alert'
                    data-notification-alert
                  >
                    {%- render 'icon', icon_name: 'error', class: 'alert__icon' -%}
                    <span class='visually-hidden' role='alert' data-notification-screen-reader-alert-text></span>
                    <div class='alert__text' data-notification-alert-text></div>
                    <div class='alert__close-icon-wrapper' data-notification-close-button>
                      {%- render 'icon', icon_name: 'notification-close', class: 'alert__close-icon' -%}
                    </div>
                  </div>
                </div>
              </notification-component>
              <div class='cart-drawer-subtotal cart-drawer__element-for-non-empty-cart' data-swipe-area>
