{%- liquid
  assign options = section.settings

  assign has_aside_blocks = false
  assign on_side_blocks = section.blocks | where: 'type', 'on_side_cart_related'

  if on_side_blocks != blank
    assign has_aside_blocks = true
  endif

  assign has_warning_placeholder = true
  for block in section.blocks
    if block.type == 'countdown' or block.type == 'in_cart_related' or block.type == 'on_side_cart_related' or block.type == 'in_cart_banner'
      if block.settings.recommendations_type == 'auto' and cart == empty
        assign has_warning_placeholder = true
      elsif block.settings.hide_for_empty_cart == false
        assign has_warning_placeholder = false
        break
      endif
    endif
  endfor
-%}

{% liquid
  assign show_currency_code = section.settings.show_currency_code
  assign total_compare_at_price = 0

  for item in cart.items
    if item.variant.compare_at_price > item.variant.price
      assign sale_amount = item.variant.compare_at_price | minus: item.variant.price
      assign sale_amount_total = sale_amount | times: item.quantity
      assign total_compare_at_price = total_compare_at_price | plus: sale_amount_total
    endif
  endfor

  assign full_price = cart.original_total_price | plus: total_compare_at_price

  assign detected_discounts = ''
  assign final_discounts = ''
  assign final_discounts_amount = total_compare_at_price

  for item in cart.items
    for discount in item.discounts
      assign detected_discounts = detected_discounts | append: discount.title | append: '//' | append: discount.total_amount | append: ','
    endfor
  endfor
  assign detected_discounts = detected_discounts | split: ','

  for detected_discount_1 in detected_discounts
    assign detected_discount_1_info = detected_discount_1 | split: '//'
    assign detected_discount_1_name = detected_discount_1_info[0]

    unless final_discounts contains detected_discount_1_name
      assign final_discount_name = detected_discount_1_name
      assign final_discount_amount = 0

      for detected_discount_2 in detected_discounts
        assign detected_discount_2_info = detected_discount_2 | split: '//'
        assign detected_discount_2_name = detected_discount_2_info[0]
        assign detected_discount_2_amount = detected_discount_2_info[1]

        if final_discount_name == detected_discount_2_name
          assign final_discount_amount = final_discount_amount | plus: detected_discount_2_amount
        endif
      endfor

      assign final_discounts = final_discounts | append: final_discount_name | append: '//' | append: final_discount_amount | append: ','
      assign final_discounts_amount = final_discounts_amount | plus: final_discount_amount
    endunless
  endfor

  assign final_discounts = final_discounts | split: ','

  assign on_side_related_block = section.blocks | where: 'type', 'on_side_cart_related' | first
%}

{%- capture css -%}
  {% style %}
    {% for block in section.blocks %}
      .block-{{block.id}} {
        --gsc-space-between-cards: {{block.settings.mobile_space_between_cards}}px;
      }

      @media {% render 'media-queries', screen: 'md' %} {
        .block-{{block.id}} {
          --gsc-space-between-cards: {{block.settings.desktop_space_between_cards}}px;
        }
      }
    {% endfor %}
  {% endstyle %}
{%- endcapture -%}

{%- render 'inline-css-minifier', css: css -%}

{%- if settings.cart_type == 'drawer_and_page' or settings.cart_type == 'drawer_only' -%}
  {%- unless template.name contains 'cart' -%}
    <cart-drawer
      class='cart-drawer color-{{ options.color_scheme }}'
      id='CartDrawer'
      data-with-overlay
      data-with-close-on-outside
      data-with-close-on-escape
      data-overlay-important
      {% if cart != empty %}
        has-aside-products
      {% elsif on_side_blocks[0].settings.hide_for_empty_cart == false
        and on_side_blocks[0].settings.recommendations_type == 'manually'
      %}
        has-aside-products
      {% endif %}
      data-sidebar-section
      data-section-id='{{ section.id }}'
      data-open-direction='right'
      tabindex='-1'
      {% if has_warning_placeholder %}
        data-has-warning-placeholder
      {% endif %}
      {% if cart == empty and has_warning_placeholder %}
        is-empty
      {% endif %}
      {% if cart == empty %}
        empty-cart
      {% endif %}
    >
      <template data-sidebar-template='CartDrawer'>
        <div class='cart-drawer__body' data-sidebar-body>
          <div class='hidden'>
            <div id='NewCartCount'>
              {%- if cart != empty -%}
                <div class='cart-count {% if cart.item_count > 9 %}cart-count--ellipse{% endif %}'>
                  <span aria-hidden='true'>{{ cart.item_count }}</span>
                </div>
              {%- endif -%}
            </div>
          </div>

          <div class='cart-drawer__body-main-content {% if has_aside_blocks %} cart-drawer__body-main-content--with-aside-content {% endif %}'>
            <cart-drawer-header class='cart-drawer__header'>
              <div class='cart-drawer__header-title'>
                {{ 'general.sidebar_cart.store_front.title' | t }}
                &nbsp;
                {%- if cart.item_count > 0 -%}
                  <span class='cart-drawer__header-product-count cart-drawer__element-for-non-empty-cart'>
                    {{- 'general.sidebar_cart.store_front.title_count' | t: count: cart.item_count -}}
                  </span>
                {%- endif -%}
              </div>
              <sidebar-button>
                <button
                  data-sidebar-button
                  data-sidebar-id='CartDrawer'
                  class='unstyled-button close-button-with-scale-hover-wrapper cart-drawer__header-close-button-wrapper'
                  tabindex='0'
                  aria-label='{{- 'general.sidebar_cart.screen_reader.drawer_close_button' | t -}}'
                >
                  <span class='close-button-with-scale-hover cart-drawer__header-close-button'></span>
                </button>
              </sidebar-button>
            </cart-drawer-header>
            <div class='cart-drawer__content' data-cart-drawer-viewport>
              <div class='cart-drawer__results' data-cart-drawer-results>
                <div class='cart-drawer__warning cart-drawer__element-for-empty-cart' data-cart-drawer-warning>
                  <h6 class='sidebar-cart__warning-title h6'>{{ 'general.empty_cart_page.store_front.title' | t }}</h6>
                </div>
                {% if section.blocks.size > 0 or settings.cart_free_shipping_bar_visible %}
                  <div class='cart-drawer__blocks cart-drawer__element-for-non-empty-cart'>
                    {%- if settings.cart_free_shipping_bar_visible -%}
                      <!-- <cart-drawer-free-shipping-bar-block class='cart-drawer__free-shipping-bar'>
                        {% render 'free-shipping-bar', inside_sidebar: true %}
                      </cart-drawer-free-shipping-bar-block> -->
                    {%- endif -%}
                    {% for block in section.blocks %}
                      {% case block.type %}
                        {% when '@app' %}
                          <div class='cart-drawer__block cart-drawer__app-block' {{ block.shopify_attributes }}>
                            {% render block %}
                          </div>
                        {% when 'countdown' %}
                          <cart-drawer-timer-block
                            class='cart-drawer__block color-{{ block.settings.color_scheme }} block-{{ block.id }} hidden'
                            block-id='{{ block.id }}'
                            {{ block.shopify_attributes }}
                          >
                            {%- unless cart == empty and block.settings.hide_for_empty_cart -%}
                              <div class='cart-drawer__timer-block-wrapper'>
                                {% render 'timer-block', block: block, ensure_width: false %}
                              </div>
                            {%- endunless -%}
                          </cart-drawer-timer-block>
                        {% when 'on_side_cart_related' %}
                          {% if block.settings.hide_on_mobile == false %}
                            {% liquid
                              assign img_ratio = block.settings.img_ratio
                              if img_ratio == 'inherited'
                                assign img_ratio = section.settings.img_ratio
                              endif

                              assign content_alignment = block.settings.content_alignment
                              assign with_background = block.settings.cards_color_background
                              assign autoplay_mode = block.settings.autoplay_mode
                              assign autoplay_interval = block.settings.autoplay_interval

                              assign in_cart_related_layout = 'grid'
                              if block.settings.in_cart_related_layout contains 'carousel'
                                assign in_cart_related_layout = 'carousel'
                              endif
                            %}

                            <cart-drawer-related-products-block
                              class='cart-drawer__block cart-drawer__block--on-mobile-only color-{{ block.settings.color_scheme }} block-{{block.id}}'
                              block-id='on-side-related-products-block-on-mobile-{{ block.id }}'
                              {% if block.settings.recommendations_type == 'auto' %}
                                is-auto-recommendations
                              {% endif %}
                              {{ block.shopify_attributes }}
                            >
                              <div
                                class='cart-drawer__in-cart-related-products-wrapper {% if block.settings.enable_color_background %} cart-drawer__in-cart-related-products-wrapper--with-background {% endif %}'
                                {% if block.settings.hide_for_empty_cart == false %}
                                  permanently-visible
                                {% endif %}
                              >
                                {%- if block.settings.recommendations_type == 'auto' -%}
                                  <cart-drawer-related-products
                                    class='cart-drawer__in-cart-related-products {% if block.settings.enable_color_background %}cart-drawer__on-side-related-products--with-background{% endif %}'
                                    data-url='{%- if cart.items.size > 0 -%}{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ cart.items[0].product_id }}&limit={{ block.settings.cards_to_show }}{%- endif -%}'
                                    id='on-side-related-products-on-mobile-{{ block.id }}'
                                    data-cart-drawer-related-products
                                    is-ready
                                  >
                                    {% if block.settings.heading != blank %}
                                      <h6 class='{{ block.settings.heading_size }} cart-drawer__in-cart-related-products-heading cart-drawer__in-cart-related-products-heading--with-{{ block.settings.heading_alignment_mobile }}-alignment'>
                                        {{ block.settings.heading }}
                                      </h6>
                                    {% endif %}
                                    {%- if recommendations.performed and recommendations.products_count > 0 -%}
                                      <slider-grid
                                        class='slider-grid cart-drawer__in-cart-related-products-viewport {% if block.settings.in_cart_related_layout == 'carousel-with-horizontal-cards' %} cart-drawer__card-carousel--with-horizontal-cards {% endif %} {% if block.settings.in_cart_related_layout == 'carousel-with-vertical-cards' %} cart-drawer__card-carousel--with-vertical-cards {% endif %} {% if request.design_mode %}is-editor-mode{% endif %}'
                                        {% if autoplay_mode != 'disabled' %}
                                          autoplay-mode='{{autoplay_mode}}'
                                          autoplay-interval='{{autoplay_interval}}'
                                        {% endif %}
                                      >
                                        <div
                                          slider-grid-track
                                          class='slider-grid-track slider-grid__m-{{in_cart_related_layout}}'
                                        >
                                          {%- for product in recommendations.products -%}
                                            {% if block.settings.in_cart_related_layout
                                                == 'carousel-with-vertical-cards'
                                            %}
                                              <div
                                                class='cart-drawer__in-cart-related-products-slide'
                                                slider-grid-slide
                                              >
                                                {% render 'vertical-product-card',
                                                  product: product,
                                                  img_ratio: img_ratio,
                                                  data: 'in-cart-related-product',
                                                  content_alignment: content_alignment,
                                                  with_background: with_background,
                                                  is_inside_block_with_background: block.settings.enable_color_background
                                                %}
                                              </div>
                                            {% else %}
                                              <div
                                                class='cart-drawer__in-cart-related-products-slide'
                                                slider-grid-slide
                                              >
                                                {% render 'horizontal-product-card',
                                                  product: product,
                                                  img_ratio: img_ratio,
                                                  data: 'in-cart-related-product',
                                                  content_alignment: content_alignment,
                                                  with_background: with_background,
                                                  is_inside_block_with_background: block.settings.enable_color_background
                                                %}
                                              </div>
                                            {% endif %}
                                          {%- endfor -%}
                                        </div>
                                      </slider-grid>
                                    {%- endif -%}

                                    {%- render 'loading-overlay',
                                      class: 'cart-drawer__related-products-preloader',
                                      id: 'CartDrawerInCartRelatedProductsPreloader'
                                    -%}
                                  </cart-drawer-related-products>
                                {%- elsif block.settings.recommendations_type == 'manually' -%}
                                  {% liquid
                                    assign manually_recommendation_products = (1..block.settings.cards_to_show)

                                    if block.settings.featured_products != blank
                                      assign manually_recommendation_products = block.settings.featured_products
                                    elsif block.settings.featured_collection.products != blank
                                      assign manually_recommendation_products = block.settings.featured_collection.products
                                    endif
                                  %}
                                  <div
                                    class='cart-drawer__in-cart-related-products'
                                    data-cart-drawer-related-products
                                    is-ready
                                  >
                                    {% if block.settings.heading != blank %}
                                      <h6 class='{{ block.settings.heading_size }} cart-drawer__in-cart-related-products-heading cart-drawer__in-cart-related-products-heading--with-{{ block.settings.heading_alignment_mobile }}-alignment'>
                                        {{ block.settings.heading }}
                                      </h6>
                                    {% endif %}

                                    <slider-grid
                                      class='slider-grid cart-drawer__in-cart-related-products-viewport {% if block.settings.in_cart_related_layout == 'carousel-with-horizontal-cards' %} cart-drawer__card-carousel--with-horizontal-cards {% endif %} {% if block.settings.in_cart_related_layout == 'carousel-with-vertical-cards' %} cart-drawer__card-carousel--with-vertical-cards {% endif %} {% if request.design_mode %}is-editor-mode{% endif %}'
                                      {% if autoplay_mode != 'disabled' %}
                                        autoplay-mode='{{autoplay_mode}}'
                                        autoplay-interval='{{autoplay_interval}}'
                                      {% endif %}
                                      {% if in_cart_related_layout contains 'grid' %}
                                        desktop-disabled
                                        mobile-disabled
                                      {% endif %}
                                    >
                                      <div
                                        slider-grid-track
                                        class='slider-grid-track slider-grid__d-{{in_cart_related_layout}} slider-grid__m-{{in_cart_related_layout}}'
                                      >
                                        {%- for product in manually_recommendation_products
                                          limit: block.settings.cards_to_show
                                        -%}
                                          {% if block.settings.in_cart_related_layout == 'carousel-with-vertical-cards'
                                          %}
                                            <div
                                              class='cart-drawer__in-cart-related-products-slide'
                                              slider-grid-slide
                                            >
                                              {% render 'vertical-product-card',
                                                product: product,
                                                img_ratio: img_ratio,
                                                data: 'in-cart-related-product',
                                                content_alignment: content_alignment,
                                                with_background: with_background,
                                                is_inside_block_with_background: block.settings.enable_color_background
                                              %}
                                            </div>
                                          {% else %}
                                            <div
                                              class='cart-drawer__in-cart-related-products-slide'
                                              slider-grid-slide
                                            >
                                              {% render 'horizontal-product-card',
                                                product: product,
                                                img_ratio: img_ratio,
                                                data: 'in-cart-related-product',
                                                content_alignment: content_alignment,
                                                with_background: with_background,
                                                is_inside_block_with_background: block.settings.enable_color_background
                                              %}
                                            </div>
                                          {% endif %}
                                        {%- endfor -%}
                                      </div>
                                    </slider-grid>
                                  </div>
                                {%- endif -%}
                              </div>
                            </cart-drawer-related-products-block>
                          {% endif %}

                        {% when 'in_cart_related' %}
                          {% liquid
                            assign img_ratio = block.settings.img_ratio
                            if img_ratio == 'inherited'
                              assign img_ratio = section.settings.img_ratio
                            endif

                            assign content_alignment = block.settings.content_alignment
                            assign with_background = block.settings.cards_color_background
                            assign autoplay_mode = block.settings.autoplay_mode
                            assign autoplay_interval = block.settings.autoplay_interval
                            assign show_arrows_on_hover = block.settings.show_arrows_on_hover

                            assign in_cart_related_layout = 'grid'
                            if block.settings.in_cart_related_layout contains 'carousel'
                              assign in_cart_related_layout = 'carousel'
                            endif
                          %}

                          <cart-drawer-related-products-block
                            class='cart-drawer__block color-{{ block.settings.color_scheme }} block-{{block.id}}'
                            block-id='in-cart-related-products-block-{{ block.id }}'
                            {% if block.settings.recommendations_type == 'auto' %}
                              is-auto-recommendations
                            {% endif %}
                            {{ block.shopify_attributes }}
                          >
                            <div
                              class='cart-drawer__in-cart-related-products-wrapper {% if block.settings.enable_color_background %} cart-drawer__in-cart-related-products-wrapper--with-background {% endif %}'
                              {% if block.settings.hide_for_empty_cart == false %}
                                permanently-visible
                              {% endif %}
                              {% if block.settings.hide_for_empty_cart == true %}
                                hide-for-empty-cart
                              {% endif %}
                            >
                              {%- if block.settings.recommendations_type == 'auto' -%}
                                <cart-drawer-related-products
                                  class='cart-drawer__in-cart-related-products {% if block.settings.enable_color_background %}cart-drawer__on-side-related-products--with-background{% endif %}'
                                  data-url='{%- if cart.items.size > 0 -%}{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ cart.items[0].product_id }}&limit={{ block.settings.cards_to_show }}{%- endif -%}'
                                  id='in-cart-related-products-{{ block.id }}'
                                  data-cart-drawer-related-products
                                  is-ready
                                >
                                  {% if block.settings.heading != blank %}
                                    <h6 class='{{ block.settings.heading_size }} cart-drawer__in-cart-related-products-heading cart-drawer__in-cart-related-products-heading--with-{{ block.settings.heading_alignment }}-alignment'>
                                      {{ block.settings.heading }}
                                    </h6>
                                  {% endif %}
                                  {%- if recommendations.performed and recommendations.products_count > 0 -%}
                                    <slider-grid
                                      class='slider-grid cart-drawer__in-cart-related-products-viewport {% if show_arrows_on_hover %}card-carousel--navigation-on-hover{% endif %} {% if block.settings.in_cart_related_layout == 'carousel-with-horizontal-cards' %} cart-drawer__card-carousel--with-horizontal-cards {% endif %} {% if block.settings.in_cart_related_layout == 'carousel-with-vertical-cards' %} cart-drawer__card-carousel--with-vertical-cards {% endif %} {% if request.design_mode %}is-editor-mode{% endif %}'
                                      {% if autoplay_mode != 'disabled' %}
                                        autoplay-mode='{{autoplay_mode}}'
                                        autoplay-interval='{{autoplay_interval}}'
                                      {% endif %}
                                      {% if in_cart_related_layout contains 'grid' %}
                                        desktop-disabled
                                        mobile-disabled
                                      {% endif %}
                                    >
                                      <div
                                        slider-grid-track
                                        class='slider-grid-track slider-grid__d-{{in_cart_related_layout}} slider-grid__m-{{in_cart_related_layout}}'
                                      >
                                        {%- for product in recommendations.products -%}
                                          {% if block.settings.in_cart_related_layout == 'carousel-with-vertical-cards'
                                          %}
                                            <div
                                              class='cart-drawer__in-cart-related-products-slide'
                                              slider-grid-slide
                                            >
                                              {% render 'vertical-product-card',
                                                product: product,
                                                img_ratio: img_ratio,
                                                data: 'in-cart-related-product',
                                                content_alignment: content_alignment,
                                                with_background: with_background,
                                                is_inside_block_with_background: block.settings.enable_color_background
                                              %}
                                            </div>
                                          {% else %}
                                            <div
                                              class='cart-drawer__in-cart-related-products-slide'
                                              slider-grid-slide
                                            >
                                              {% render 'horizontal-product-card',
                                                product: product,
                                                img_ratio: img_ratio,
                                                data: 'in-cart-related-product',
                                                content_alignment: content_alignment,
                                                with_background: with_background,
                                                is_inside_block_with_background: block.settings.enable_color_background
                                              %}
                                            </div>
                                          {% endif %}
                                        {%- endfor -%}
                                      </div>

                                      {% if in_cart_related_layout contains 'carousel'
                                        and show_arrows_on_hover
                                        and recommendations.products_count > 3
                                      %}
                                        {% if block.settings.in_cart_related_layout contains 'vertical' %}
                                          <div class='card-carousel__position-btn-wrap card-carousel__position-btn-wrap--prev {% if img_ratio == 'nature' %} card-carousel__position-btn-wrap--nature-img-ratio {% endif %}'>
                                            <div class='shape shape--{{ img_ratio }}'>
                                              <button
                                                type='button'
                                                class='carousel-btn card-carousel__carousel-btn card-carousel__carousel-btn--prev'
                                                data-direction='prev'
                                                tabindex='0'
                                                disabled
                                              >
                                                {% render 'icon',
                                                  icon_name: 'chevron',
                                                  class: 'carousel-btn__icon x-flip'
                                                %}
                                              </button>
                                            </div>
                                          </div>

                                          <div class='card-carousel__position-btn-wrap card-carousel__position-btn-wrap--next {% if img_ratio == 'nature' %} card-carousel__position-btn-wrap--nature-img-ratio {% endif %}'>
                                            <div class='shape shape--{{ img_ratio }}'>
                                              <button
                                                type='button'
                                                class='carousel-btn card-carousel__carousel-btn card-carousel__carousel-btn--next'
                                                data-direction='next'
                                                tabindex='0'
                                                disabled
                                              >
                                                {%- render 'icon', icon_name: 'chevron', class: 'carousel-btn__icon' -%}
                                              </button>
                                            </div>
                                          </div>
                                        {% else %}
                                          <button
                                            type='button'
                                            class='carousel-btn card-carousel__carousel-btn card-carousel__carousel-btn--prev'
                                            data-direction='prev'
                                            tabindex='0'
                                            disabled
                                          >
                                            {% render 'icon',
                                              icon_name: 'chevron',
                                              class: 'carousel-btn__icon x-flip'
                                            %}
                                          </button>

                                          <button
                                            type='button'
                                            class='carousel-btn card-carousel__carousel-btn card-carousel__carousel-btn--next'
                                            data-direction='next'
                                            tabindex='0'
                                            disabled
                                          >
                                            {%- render 'icon', icon_name: 'chevron', class: 'carousel-btn__icon' -%}
                                          </button>
                                        {% endif %}
                                      {% endif %}
                                    </slider-grid>
                                  {%- endif -%}
                                  {%- render 'loading-overlay',
                                    class: 'cart-drawer__related-products-preloader',
                                    id: 'CartDrawerInCartRelatedProductsPreloader'
                                  -%}
                                </cart-drawer-related-products>
                              {%- elsif block.settings.recommendations_type == 'manually' -%}
                                {% liquid
                                  assign manually_recommendation_products = (1..block.settings.cards_to_show)

                                  if block.settings.featured_products != blank
                                    assign manually_recommendation_products = block.settings.featured_products
                                  elsif block.settings.featured_collection.products != blank
                                    assign manually_recommendation_products = block.settings.featured_collection.products
                                  endif

                                  assign in_cart_related_layout = 'grid'
                                  if block.settings.in_cart_related_layout contains 'carousel'
                                    assign in_cart_related_layout = 'carousel'
                                  endif
                                %}
                                <div
                                  class='cart-drawer__in-cart-related-products'
                                  data-cart-drawer-related-products
                                  is-ready
                                >
                                  {% if block.settings.heading != blank %}
                                    <h6 class='{{ block.settings.heading_size }} cart-drawer__in-cart-related-products-heading cart-drawer__in-cart-related-products-heading--with-{{ block.settings.heading_alignment }}-alignment'>
                                      {{ block.settings.heading }}
                                    </h6>
                                  {% endif %}

                                  <slider-grid
                                    class='slider-grid cart-drawer__in-cart-related-products-viewport {% if show_arrows_on_hover %}card-carousel--navigation-on-hover{% endif %} {% if block.settings.in_cart_related_layout == 'carousel-with-horizontal-cards' %} cart-drawer__card-carousel--with-horizontal-cards {% endif %} {% if block.settings.in_cart_related_layout == 'carousel-with-vertical-cards' %} cart-drawer__card-carousel--with-vertical-cards {% endif %} {% if request.design_mode %}is-editor-mode{% endif %}'
                                    {% if autoplay_mode != 'disabled' %}
                                      autoplay-mode='{{autoplay_mode}}'
                                      autoplay-interval='{{autoplay_interval}}'
                                    {% endif %}
                                    {% if in_cart_related_layout contains 'grid' %}
                                      desktop-disabled
                                      mobile-disabled
                                    {% endif %}
                                  >
                                    <div
                                      slider-grid-track
                                      class='slider-grid-track slider-grid__d-{{in_cart_related_layout}} slider-grid__m-{{in_cart_related_layout}}'
                                    >
                                      {%- for product in manually_recommendation_products
                                        limit: block.settings.cards_to_show
                                      -%}
