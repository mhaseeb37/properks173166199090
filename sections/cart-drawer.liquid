                                  <span class='cart-drawer-subtotal__sale-item-name'>
                                    {{- final_discount_name -}}
                                  </span>
                                  <span class='cart-drawer-subtotal__sale-item-amount'>
                                    {% if show_currency_code %}
                                      {{- final_discount_amount | money_with_currency | prepend: '-' }}
                                    {% else %}
                                      {{- final_discount_amount | money | prepend: '-' }}
                                    {% endif %}
                                  </span>
                                </div>
                              {% endfor %}
                              {%- for discount in cart.cart_level_discount_applications -%}
                                <div class='cart-drawer-subtotal__sale-item'>
                                  <span class='cart-drawer-subtotal__sale-item-name'>
                                    {{ discount.title }}
                                  </span>
                                  <span class='cart-drawer-subtotal__sale-item-amount'>
                                    {% if show_currency_code %}
                                      -{{ discount.total_allocated_amount | money_with_currency -}}
                                    {% else %}
                                      -{{ discount.total_allocated_amount | money -}}
                                    {% endif %}
                                  </span>
                                </div>
                              {%- endfor -%}
                            </div>
                          </div>
                        </accordeon-component>
                      </div>
                    {% endif %}
                    <h6 class='cart-drawer-subtotal__totals'>
                      <div class='cart-drawer-subtotal__label'>
                        {{ 'general.subtotal.store_front.label_for_total_price' | t }}
                      </div>
                      <div class='cart-drawer-subtotal__price'>
                        {% if show_currency_code %}
                          {{ cart.total_price | money_with_currency }}
                        {% else %}
                          {{ cart.total_price | money }}
                        {% endif %}
                      </div>
                    </h6>
                    {%- if section.settings.show_taxes_and_shipping_costs -%}
                      <div
                        class='cart-drawer-subtotal__tax-note'
                        data-tax-note
                      >
                        <span class='cart-drawer-subtotal__tax-note_text'>
                          {% render 'taxes-included-label' %}
                        </span>
                      </div>
                    {%- endif -%}
                  </div>
                  <cart-drawer-buttons-block class='cart-drawer-subtotal__cta'>
                    {%- if settings.cart_type != 'drawer_only' -%}
                      <a
                        class='btn btn--outline btn--lg cart-drawer-subtotal__btn cart-drawer-subtotal__cart-link'
                        href='{{ routes.cart_url }}'
                        aria-label='{{- 'general.subtotal.screen_reader.text_for_go_to_cart_button' | t -}}'
                      >
                        {{- 'general.subtotal.store_front.text_for_go_to_cart_button' | t -}}
                      </a>
                    {%- endif -%}
                    {% unless settings.hide_checkout_button == true and settings.cart_type != 'drawer_only' %}
                      <button
                        type='submit'
                        id='checkout'
                        class='cart-drawer-subtotal__btn btn btn--solid btn--lg'
                        name='checkout'
                        form='CartDrawerForm'
                        data-cart-checkout-button
                        aria-label='{{ 'general.subtotal.screen_reader.text_for_checkout_button' | t }}'
                        {% if cart == empty %}
                          disabled
                        {% endif %}
                      >
                        <span data-button-text>{{ 'general.subtotal.store_front.text_for_checkout_button' | t }}</span>
                        <div class='loading-spinner btn__loading-spinner'></div>
                      </button>
                    {% endunless %}
                  </cart-drawer-buttons-block>
                </div>
              </div>
              <sidebar-button class='cart-drawer__warning-button-wrapper cart-drawer__element-for-empty-cart'>
                <button
                  data-sidebar-button
                  data-sidebar-id='CartDrawer'
                  class='btn btn--lg btn--solid cart-drawer__warning-button'
                  aria-label='{{ 'general.sidebar_cart.screen_reader.continue_shopping' | t }}'
                >
                  {{ 'general.sidebar_cart.store_front.continue_shopping' | t }}
                </button>
              </sidebar-button>
            </cart-drawer-footer>
          </div>

          {% if has_aside_blocks %}
            <div class='cart-drawer__body-aside-content cart-drawer__element-for-non-empty-cart {% if on_side_related_block.settings.in_cart_related_layout_desktop == 'horizontal-cards' %}cart-drawer__body-aside-content--with-horizontal-cards{% endif %}'>
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'on_side_cart_related' %}
                    {% liquid
                      assign img_ratio = block.settings.img_ratio
                      if img_ratio == 'inherited'
                        assign img_ratio = section.settings.img_ratio
                      endif

                      assign content_alignment = block.settings.content_alignment
                      assign with_background = block.settings.cards_color_background
                      assign autoplay_mode = block.settings.autoplay_mode
                      assign autoplay_interval = block.settings.autoplay_interval
                      assign show_arrows_on_hover = block.settings.show_arrows_on_hover
                    %}

                    <cart-drawer-related-products-block
                      class='cart-drawer__aside-block color-{{ block.settings.color_scheme }} block-{{block.id}}'
                      is-aside-related-products
                      {% if block.settings.recommendations_type == 'auto' %}
                        is-auto-recommendations
                      {% endif %}
                      block-id='on-side-related-products-block-on-desktop-{{ block.id }}'
                      {{ block.shopify_attributes }}
                    >
                      {%- if block.settings.recommendations_type == 'auto' -%}
                        <cart-drawer-related-products
                          class='cart-drawer__on-side-related-products {% if block.settings.enable_color_background %}cart-drawer__on-side-related-products--with-background{% endif %}'
                          data-url='{%- if cart.items.size > 0 -%}{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ cart.items[0].product_id }}&limit={{ block.settings.cards_to_show }}{%- endif -%}'
                          id='on-side-related-products-on-desktop-{{ block.id }}'
                          data-cart-drawer-related-products
                        >
                          {%- unless cart == empty and block.settings.hide_for_empty_cart -%}
                            {% if block.settings.heading != blank %}
                              <h6 class='{{ block.settings.heading_size }} cart-drawer__on-side-related-products-heading cart-drawer__on-side-related-products-heading--with-{{ block.settings.heading_alignment }}-alignment'>
                                {{ block.settings.heading }}
                              </h6>
                            {% endif %}
                            {%- if recommendations.performed and recommendations.products_count > 0 -%}
                              <div class='cart-drawer__on-side-related-products-carousel-wrapper'>
                                <carousel-component
                                  class='card-carousel cart-drawer__on-side-related-products-carousel {% if show_arrows_on_hover %}card-carousel--navigation-on-hover{% endif %}'
                                  data-section-id='{{ section.id }}'
                                  data-axis='y'
                                  data-with-wheel-gestures
                                  data-contain-scroll='trimSnaps'
                                  data-skip-snaps
                                  data-in-view-threshhold='1'
                                  data-drag-free
                                  data-draggable
                                  data-align='start'
                                >
                                  {% if show_arrows_on_hover %}
                                    <div class='card-carousel__position-btn-wrap card-carousel__position-btn-wrap--prev {% if img_ratio == 'nature' %} card-carousel__position-btn-wrap--nature-img-ratio {% endif %}'>
                                      <div class='shape shape--{{ img_ratio }} {% if img_ratio contains 'fit' %} shape--fit {% endif %}'>
                                        <carousel-button
                                          class='carousel-btn card-carousel__carousel-btn card-carousel__carousel-btn--prev'
                                          data-direction='prev'
                                          tabindex='0'
                                        >
                                          {% render 'icon', icon_name: 'chevron', class: 'carousel-btn__icon x-flip' %}
                                        </carousel-button>
                                      </div>
                                    </div>
                                  {%- endif -%}

                                  <div
                                    class='embla card-carousel__viewport card-carousel__viewport--vertical cart-drawer__on-side-related-products-viewport'
                                    data-carousel-viewport
                                  >
                                    <div
                                      class='card-carousel__container cart-drawer__on-side-related-products-container'
                                      data-carousel-container
                                    >
                                      {%- for product in recommendations.products -%}
                                        <div class='card-carousel__slide cart-drawer__on-side-related-products-slide'>
                                          {% if block.settings.in_cart_related_layout_desktop == 'horizontal-cards' %}
                                            {% render 'horizontal-product-card',
                                              product: product,
                                              img_ratio: img_ratio,
                                              content_alignment: content_alignment,
                                              with_background: with_background,
                                              is_inside_block_with_background: true
                                            %}
                                          {% else -%}
                                            {%- render 'vertical-product-card',
                                              product: product,
                                              img_ratio: img_ratio,
                                              with_bottom_spacing: true,
                                              content_alignment: content_alignment,
                                              with_background: with_background,
                                              is_inside_block_with_background: true
                                            %}
                                          {% endif %}
                                        </div>
                                      {%- endfor -%}
                                    </div>
                                  </div>

                                  {% if show_arrows_on_hover %}
                                    <div class='card-carousel__position-btn-wrap card-carousel__position-btn-wrap--next {% if img_ratio == 'nature' %} card-carousel__position-btn-wrap--nature-img-ratio {% endif %}'>
                                      <div class='shape shape--{{ img_ratio }} {% if img_ratio contains 'fit' %} shape--fit {% endif %}'>
                                        <carousel-button
                                          class='carousel-btn card-carousel__carousel-btn card-carousel__carousel-btn--next'
                                          data-direction='next'
                                          tabindex='0'
                                        >
                                          {% render 'icon', icon_name: 'chevron', class: 'carousel-btn__icon' %}
                                        </carousel-button>
                                      </div>
                                    </div>
                                  {% endif %}
                                </carousel-component>
                              </div>
                            {%- endif -%}
                          {%- endunless -%}
                          {%- render 'loading-overlay',
                            class: 'cart-drawer__related-products-preloader',
                            id: 'CartDrawerInCartRelatedProductsPreloader'
                          -%}
                        </cart-drawer-related-products>
                      {%- elsif block.settings.recommendations_type == 'manually' -%}
                        {% liquid
                          assign manually_recommendation_products = (1..block.settings.cards_to_show)

                          if block.settings.featured_products != blank
                            assign manually_recommendation_products = block.settings.featured_products
                          elsif block.settings.featured_collection.products != blank
                            assign manually_recommendation_products = block.settings.featured_collection.products
                          endif
                        %}
                        <div
                          class='cart-drawer__on-side-related-products'
                          is-ready
                          data-cart-drawer-related-products
                        >
                          {%- unless cart == empty and block.settings.hide_for_empty_cart -%}
                            {% if block.settings.heading != blank %}
                              <h6 class='{{ block.settings.heading_size }} cart-drawer__on-side-related-products-heading cart-drawer__on-side-related-products-heading--with-{{ block.settings.heading_alignment }}-alignment'>
                                {{ block.settings.heading }}
                              </h6>
                            {% endif %}
                            <div class='cart-drawer__on-side-related-products-carousel-wrapper'>
                              <carousel-component
                                class='card-carousel cart-drawer__on-side-related-products-carousel {% if show_arrows_on_hover %}card-carousel--navigation-on-hover{% endif %}'
                                data-section-id='{{ section.id }}'
                                data-axis='y'
                                data-with-wheel-gestures
                                data-contain-scroll='trimSnaps'
                                data-skip-snaps
                                data-in-view-threshhold='1'
                                data-drag-free
                                data-draggable
                                data-align='start'
                              >
                                {% if show_arrows_on_hover %}
                                  <carousel-button
                                    class='carousel-btn cart-drawer__on-side-carousel-btn cart-drawer__on-side-carousel-btn--prev'
                                    data-direction='prev'
                                    tabindex='0'
                                  >
                                    {% render 'icon', icon_name: 'chevron', class: 'carousel-btn__icon x-flip' %}
                                  </carousel-button>

                                  <carousel-button
                                    class='carousel-btn cart-drawer__on-side-carousel-btn cart-drawer__on-side-carousel-btn--next'
                                    data-direction='next'
                                    tabindex='0'
                                  >
                                    {% render 'icon', icon_name: 'chevron', class: 'carousel-btn__icon' %}
                                  </carousel-button>
                                {% endif %}

                                <div
                                  class='embla card-carousel__viewport card-carousel__viewport--vertical cart-drawer__on-side-related-products-viewport'
                                  data-carousel-viewport
                                >
                                  <div
                                    class='card-carousel__container cart-drawer__on-side-related-products-container'
                                    data-carousel-container
                                  >
                                    {%- for product in manually_recommendation_products
                                      limit: block.settings.cards_to_show
                                    -%}
                                      <div class='card-carousel__slide cart-drawer__on-side-related-products-slide'>
                                        {% if block.settings.in_cart_related_layout_desktop == 'horizontal-cards' %}
                                          {% render 'horizontal-product-card',
                                            product: product,
                                            img_ratio: img_ratio,
                                            content_alignment: content_alignment,
                                            with_background: with_background,
                                            is_inside_block_with_background: true
                                          %}
                                        {% else -%}
                                          {%- render 'vertical-product-card',
                                            product: product,
                                            img_ratio: img_ratio,
                                            with_bottom_spacing: true,
                                            content_alignment: content_alignment,
                                            with_background: with_background,
                                            is_inside_block_with_background: true
                                          %}
                                        {% endif %}
                                      </div>
                                    {%- endfor -%}
                                  </div>
                                </div>
                              </carousel-component>
                            </div>
                          {%- endunless -%}
                        </div>
                      {%- endif -%}
                    </cart-drawer-related-products-block>
                {% endcase %}
              {% endfor %}
            </div>
          {% endif %}
        </div>
      </template>
    </cart-drawer>
  {%- endunless -%}
{%- endif -%}

