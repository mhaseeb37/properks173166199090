                              {% render 'icon', icon_name: 'chevron', class: 'cart-drawer-subtotal__sale-label-icon' %}
                            </span>
                            <span class='cart-drawer-subtotal__sale-label-amount'>
                              {% if show_currency_code %}
                                {{- full_price | money_with_currency -}}
                              {% else %}
                                {{- full_price | money -}}
                              {% endif %}
                            </span>
                          </accordeon-button>
                          <div class='cart-drawer-subtotal__sale-content-wrap' data-accordeon-content-wrap>
                            <div
                              class='cart-drawer-subtotal__sale-content'
