<section class="match-price-{{ section.id }}">
   <div class="match-price-wrapper container container--full-screen section-spacing container--with-aside-paddings">
     <div class="match-price-icon">
       <img src="{{ section.settings.icon | img_url: 'master' }}">
     </div>
     <div class="match-price-info" >
       <h2 class="fadintitle">{{ section.settings.heading }}</h2>
       <div class="fadindes">{{ section.settings.details }}</div>
     </div>
     <div class="match-price-btns">
       <a class="solid-btn" href="{{ section.settings.link-1 }}">{{ section.settings.btn-1 }}</a>
       <a class="outline-btn" href="{{ section.settings.link-2 }}">{{ section.settings.btn-2 }}</a>
     </div>
   </div>
</section>

<style>
  
  .match-price-{{ section.id }}{
    width: 100%;
    position: relative;
    margin-top: 20px;
    padding: 56px 0px;
  }
  .match-price-icon{
    max-width: 133px;
    margin: 0 auto;
    padding-bottom: 47px;
  }
  .match-price-icon img{
    width: 100%;
    height: auto;
    display: block;
  }
  .match-price-info{
    text-align: center;
    max-width: 915px;
    margin: 0 auto;
  }
 .match-price-info h2{
font-family: 'Inter', sans-serif;
font-style: normal;
font-weight: 600;
font-size: 60px;
line-height: 45px;
color: #000000;
    margin: 0;
    padding-bottom: 54px;
  }
  .match-price-info p{
font-family: 'Inter', sans-serif;
font-style: normal;
font-weight: 500;
font-size: 28px;
line-height: 130%;
text-align: center;
color: #000000;
margin: 0;
    padding-bottom: 54px;
  }
  .match-price-btns{
    display: flex;
    align-items: flex-start;
    justify-content: center;
    column-gap: 23px;
  }
  .match-price-btns a.solid-btn{
    display: inline-block;
    text-decoration: none;
    background-color: #000;
    color: #fff; 
    font-family: 'Inter';
    font-style: normal;
    font-weight: 600;
    font-size: 15px;
    line-height: 125%;
    width: max-content;
    padding: 18.5px 36px;
    border-radius: 16px;
    text-align: center;
  }
  .match-price-btns a.outline-btn{
    display: inline-block;
    text-decoration: none;
    background-color: #fff;
    color: #000; 
    font-family: 'Inter';
    font-style: normal;
    font-weight: 600;
    font-size: 15px;
    line-height: 125%;
    width: max-content;
    padding: 18.5px 36px;
    border-radius: 16px;
    border: 1.5px solid #000;
    text-align: center;
  }
  @media(max-width: 768px){
    .match-price-{{ section.id }}{
      padding: 28px 0px;
    }
    .match-price-icon{
      max-width: 84px;
      padding-bottom: 28px;
    }
    .match-price-info{
      max-width: 325px;
    }
    .match-price-info h2{
      font-weight: 600;
      font-size: 24px;
      line-height: 128%;
      padding-bottom: 28px;
      max-width: 185px;
      margin: 0 auto;
    }
    .match-price-info p{
       padding-bottom: 28px;
      font-size: 18px;
      line-height: 24px;
    }
    .match-price-btns a.outline-btn{
      display: none;
    }
    .match-price-btns a.solid-btn{
      padding: 18.5px 0px;
      min-width: 219px;
      text-align: center;
    }
  }
  .fadintitle{
    animation: opacity_show 1s ease-in-out;
  }
  .fadindes{
    animation: opacity_show 2s ease-in-out;
  }
  @keyframes opacity_show {
    0% {
        display: none;
        opacity: 0;
    }
    1% {
        display: block;
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
  }
</style>


{% schema %}
  {
    "name": "Match Price",
    "settings": [
      {
        "type": "image_picker",
        "id": "icon",
        "label": "Main Icon"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Price Match Beat Guarantee"
      },
      {
        "type": "richtext",
        "id": "details",
        "label": "Details",
        "default": "<p>It's our goal to provide you with the lowest possible price. If you find an item available online from an authorized retailer at a lower final price (after any tax and shipping costs), we will beat it by 5%.</p>"
      },
      {
        "type": "text",
        "id": "btn-1",
        "label": "Button Label",
        "default": "Price Match Form"
      },
      {
        "type": "url",
        "id": "link-1",
        "label": "Button Link"
      },
      {
        "type": "text",
        "id": "btn-2",
        "label": "Button Label",
        "default": "Questions? Contact Us"
      },
      {
        "type": "url",
        "id": "link-2",
        "label": "Button Link"
      }
    ],
    "presets": [
      {
        "name": "Match Price"
      }
    ]
  }
{% endschema %}