<style>
  .collection-card__title.custom-svg-flex .title-svg{
    position:relative;
    left:0px;
    transition:all 0.3s ease-in-out;
  }
  .collection-card__title.custom-svg-flex:hover .title-svg{
    position:relative;
    left:5px;
  }
  </style>
<section class="slider-section slider-{{ section.id }}">
  <div class="collection-slider container container--{{ section.settings.container_size }} section-spacing container--with-aside-paddings">
    <div class="collection-slider-header">
      <div class="collection-header-left">
        <h5>{{ section.settings.heading }}</h5>
      </div>
            <div class="collection-slider-icon">
        <div class="collection-slider-icon-btn swiper-button-prev-{{ section.id }}">
           {% render 'icon', icon_name: 'chevron', class: 'carousel-btn__icon x-flip' %}
        </div>
        <div class="collection-slider-icon-btn swiper-button-next-{{ section.id }}">
           {% render 'icon', icon_name: 'chevron', class: 'carousel-btn__icon y-flip' %}
        </div>
      </div>
    </div>
  <div class="collection-slider-container">
    <div class="collection-swiper">
      <div class="swiper-wrapper">
    {% for block in section.blocks %}
      {% assign collection_list = block.settings.collection %}
      {% if collection_list != blank %}
        <div class="swiper-slide">
          <div class="slider-block-collection">
            <div class="collection-block-image">
              {% if block.settings.block_image %}
                               <img
        {% render 'image-attributes',
          image: block.settings.block_image,
          size: 'medium',
          class: 'collection-card__image zoom shape__target-image'
        %}
                >
                {% else %}
               <img
        {% render 'image-attributes',
          image: collection_list.featured_image,
          size: 'medium',
          class: 'collection-card__image zoom shape__target-image'
        %}
                >
              {% endif %}
            </div>
          </div>
       </div>
        {% endif %}
      {% endfor %}
      </div>
    </div>
  </div>
              <div class="custom-text-section-collection-list">
      <div class="custom-text-container">
        <div class="custom-heading">
          {% if section.settings.custom-heading != blank%}
          <p>{{ section.settings.custom-heading }}</p>
          {% endif %}
        </div>
        <div class="custom-button-container">
          {% if section.settings.custom-button-1 != blank %}
          <a href="{{ section.settings.custom-button-1-url }}"><div class="custom-button first-button">{{ section.settings.custom-button-1 }}</div></a>
          {% endif %}
          {% if section.settings.custom-button-2 != blank %}
          <a href="{{ section.settings.custom-button-2-url }}"><div class="custom-button">{{ section.settings.custom-button-2 }}</div></a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>


<style>
  .slider-{{ section.id }}{
  padding-top:{{ section.settings.padding_top}}px;
    padding-bottom:{{ section.settings.padding_bottom}}px;
  }
 
  .custom-text-section-collection-list{
    display:flex;
    justify-content:center;
    align-items:center;
  }
  .custom-text-container{
    display:flex;
    flex-direction:column;
    align-items:center;
    justify-content:center;
  }
  .custom-heading p{
    color: #454545;
    font-size:18px;
    font-weight:300;
    text-align:center;
  }
  .custom-button-container{
    padding:25px 0;
    display:flex;
    align-items:center;
    gap:10px;
    flex-wrap:wrap;
  }
  .custom-button-container a{
    text-decoration:none;
  }
  .custom-button{
    border:1px solid #454545;
    background:transparent;
    color:#454545;
    padding:12px 26px;
    font-size: 14px;
    width:170px;
    text-align:center;
    border-radius: 16px;
  }
  .collection-block-image{
    position:relative;
    padding-top:100%;
    border-radius: 15px;
    overflow: hidden;
  }
    .collection-block-image img{
      width:100%;
      height:100%;
      object-fit:cover;
      aspect-ratio:1;
      display:block;
    }
  
 .collection-slider-header .swiper-button-prev:after,
 .collection-slider-header .swiper-rtl,
 .collection-slider-header .swiper-button-next:after {
  content: "";
}
 .collection-slider-header .swiper-button-next:after,
 .collection-slider-header .swiper-button-prev:after {
  font-family: none;
}

 .collection-slider-header .swiper-button-next,
 .collection-slider-header .swiper-button-prev {
  position: relative;
  width: auto;
  height: auto;
  margin-top: 0;
  z-index: 1;
}
 .collection-slider-header .swiper-button-next,
 .collection-slider-header .swiper-rtl,
 .collection-slider-header .swiper-button-prev {
  right: 0;
  left: 0;
}
  .collection-slider-header{
  display: none;
  justify-content: space-between;
  align-items: center;
  padding: 10px 0;
}
.collection-header-left {
  display: flex;
  flex-direction: column;
  gap: 3px;
}

.collection-header-left h5 {
  color: #383838;
  font-size: 32px;
  font-weight: 600;
}

.collection-slider-icon {
  display: flex;
  align-items: center;
  gap: 5px;
  /* position:relative; */
}
.collection-slider-icon-btn {
  border: 1px solid black;
  padding: 5px;
  border-radius: 50%;
  cursor: pointer;
}
.custom-slider-container {
  border-top: 1px solid #aeaeae;
  border-bottom: 1px solid #aeaeae;
  display: flex;
  width: 100%;
}
  .slider-block-collection{
    padding-right:15px;
  }
  .custom-text-section-collection-list{
    padding-top:40px;
  }


  @media (max-width:768px){
      .custom-text-container{
    padding: 20px 0;
  }
    .collection-swiper .slider-block-collection{
       padding-right:8px;
    }
    .first-button{
      background:black;
      color:white;
    }
    .custom-button{
      padding: 12px 18px;
      width:160px;
    }
      .slider-{{ section.id }}{
  padding-top:{{ section.settings.padding_top_mb}}px;
    padding-bottom:{{ section.settings.padding_bottom_mb}}px;
  }
  }
</style>
<script>
var swiper_{{ section.id | replace:"-","_"}} = new Swiper('.slider-{{ section.id }} .collection-swiper', {
  direction: 'horizontal',
  loop: false,
  slidesPerView: 2.2,
  navigation: {
    nextEl: '.swiper-button-next-{{ section.id }}',
    prevEl: '.swiper-button-prev-{{ section.id }}',
  },
  freeMode: {
    enabled: true,
    sticky: false,
    momentumBounce: false,
  },
  breakpoints: {
    768: {
      slidesPerView: 3.2,
    },
    1024: {
      slidesPerView: 5.1,
    },
  },
});
</script>
{% schema %}
{
  "name": "Collection list slider",
  "tag": "section",
  "settings": [
      {
      "type": "select",
      "id": "container_size",
      "options": [
        {
          "value": "page-width",
          "label": "t:sections.general_section_settings.container_size.page_width_option"
        },
        {
          "value": "large",
          "label": "t:sections.general_section_settings.container_size.large_width_option"
        },
        {
          "value": "medium",
          "label": "t:sections.general_section_settings.container_size.medium_width_option"
        }
      ],
      "default": "page-width",
      "label": "t:sections.general_section_settings.container_size.label"
    },
    
      {
        "type":"header",
        "content": "Desktop"
      },
      {
      "type": "range",
      "id": "padding_top",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 25,
      "unit": "px",
      "label": "Padding Top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 25,
      "unit": "px",
      "label": "Padding Bottom"
    },
      {
        "type":"header",
        "content": "Mobile"
      },
      {
      "type": "range",
      "id": "padding_top_mb",
      "min": 10,
      "max": 60,
      "step": 1,
      "default": 25,
      "unit": "px",
      "label": "Padding Top"
    },
    {
      "type": "range",
      "id": "padding_bottom_mb",
      "min": 10,
      "max": 60,
      "step": 1,
      "default": 25,
      "unit": "px",
      "label": "Padding Bottom"
    },
    {
        "type": "text",
        "id": "heading",
        "label": "Section Heading",
         "default":"Shop by Category_"
    },
    {
      "type": "richtext",
      "id": "custom-heading",
      "label": "Heading Below List",
    },
    {
      "type": "text",
      "id": "custom-button-1",
      "label": "First Button Label",
    },
    {
      "type": "url",
      "id": "custom-button-1-url",
      "label": "First Button Link"
    },
    {
      "type": "text",
      "id": "custom-button-2",
      "label": "Second Button Label",
    },
    {
      "type": "url",
      "id": "custom-button-2-url",
      "label": "Second Button Link"
    }
  ],
  "blocks":[
    {
      "type":"collection",
      "name" : "Collection",
      "settings":[
        {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    },
    {
      "type": "image_picker",
      "id": "block_image",
      "label": "Image"
    }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection list slider"
    }
  ]
}
{% endschema %}
