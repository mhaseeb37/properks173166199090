                <div
                  class='slider-grid__slide'
                  slider-grid-slide
                  {% if mobile_layout == 'carousel' %}
                    index='{{ forloop.index0 }}'
                  {% endif %}
                >
                  {%- render 'article-card',
                    type: 'full',
                    article: article,
                    img_ratio: 'nature',
                    show_read_more: show_read_more,
                    show_subheading: show_subheading,
                    show_comment_count: show_comment_count,
                    show_date: show_date,
                    show_author: show_author,
                    show_tags: show_tags,
                    selected_tags: selected_tags,
                    tags_position: tags_position,
                    collapse_extra_tags: collapse_extra_tags,
                    layout: 'desktop',
                    color_post_background: color_post_background
                  -%}
                </div>
              {%- endfor -%}
            </div>

            {% if desktop_layout contains 'carousel' and articles.size > desktop_columns %}
              <div class='card-carousel__position-btn-wrap card-carousel__position-btn-wrap--prev'>
                <div class='shape shape--nature'>
                  <button
                    type='button'
                    class='carousel-btn card-carousel__carousel-btn card-carousel__carousel-btn--prev'
                    data-direction='prev'
                    tabindex='0'
                    disabled
                  >
                    {% render 'icon', icon_name: 'chevron', class: 'carousel-btn__icon x-flip' %}
                  </button>
                </div>
              </div>

              <div class='card-carousel__position-btn-wrap card-carousel__position-btn-wrap--next'>
                <div class='shape shape--nature'>
                  <button
                    type='button'
                    class='carousel-btn card-carousel__carousel-btn card-carousel__carousel-btn--next'
                    data-direction='next'
                    tabindex='0'
                  >
                    {%- render 'icon', icon_name: 'chevron', class: 'carousel-btn__icon' -%}
                  </button>
                </div>
              </div>
            {% endif %}
          </slider-grid>
        {% endif %}

        {% if desktop_layout == 'slideshow' %}
          <carousel-component
            class='card-carousel articles-slideshow'
            data-section-id='{{ section.id }}'
            with-stop-on-hover
            data-draggable
            data-align='start'
            data-axis='x'
            data-contain-scroll='trimSnaps'
          >
            <div class='card-carousel__viewport embla articles-slideshow__image' data-carousel-viewport>
              <div class='card-carousel__container' data-carousel-container>
                {%- for article in articles limit: posts_to_show -%}
                  <div class='card-carousel__slide zoom-parent-for-hover'>
                    {%- render 'article-card',
                      type: 'image',
                      article: article,
                      img_ratio: 'nature',
                      show_read_more: show_read_more,
                      show_subheading: show_subheading,
                      show_comment_count: show_comment_count,
                      show_date: show_date,
                      show_author: show_author,
                      show_tags: show_tags,
                      selected_tags: selected_tags,
                      tags_position: tags_position,
                      collapse_extra_tags: collapse_extra_tags,
                      layout: 'desktop',
                      color_post_background: color_post_background
                    -%}
                  </div>
                {%- endfor -%}
              </div>
            </div>

            <carousel-dots
              class='carousel articles-slideshow__details {% if color_post_background %} articles-slideshow__details--with-background {% endif %}'
              data-contain-scroll='keepSnaps'
              data-align='center'
              data-in-view-threshhold='1'
              data-axis='x'
              change-slide-on-scroll='true'
            >
              <div
                class='carousel__viewport embla'
                data-carousel-viewport
              >
                <div
                  class='carousel__container'
                  data-carousel-container
                >
                  {%- for article in articles limit: posts_to_show -%}
                    <carousel-dot
                      class='carousel__slide link-parent-for-hover'
                      tabindex='0'
                      data-dot-index='{{ forloop.index0 }}'
                    >
                      {%- render 'article-card',
                        type: 'details',
                        article: article,
                        img_ratio: 'nature',
                        show_read_more: show_read_more,
                        show_subheading: show_subheading,
                        show_comment_count: show_comment_count,
                        show_date: show_date,
                        show_author: show_author,
                        show_tags: show_tags,
                        selected_tags: selected_tags,
                        tags_position: tags_position,
                        collapse_extra_tags: collapse_extra_tags,
                        layout: 'desktop',
                        color_post_background: color_post_background
                      -%}
                    </carousel-dot>
                  {%- endfor -%}
                </div>
              </div>

              {% if articles.size > 1 %}
                <div class='articles-slideshow__arrows {% if color_post_background %}articles-slideshow__arrows--on-background{% endif %}'>
                  <carousel-button
                    class='carousel-btn'
                    data-direction='prev'
                    tabindex='0'
                  >
                    {% render 'icon-pack', icon: 'arrow-carousel', class: 'carousel-btn__icon x-flip' %}
                  </carousel-button>

                  <carousel-button
                    class='carousel-btn'
                    data-direction='next'
                    tabindex='0'
                  >
                    {% render 'icon-pack', icon: 'arrow-carousel', class: 'carousel-btn__icon' %}
                  </carousel-button>
                </div>
              {% endif %}
            </carousel-dots>
          </carousel-component>
        {% endif %}
      </section>

      <section class='articles__mobile-content'>
        {% if mobile_layout != 'slideshow' %}
          <slider-grid
            class='slider-grid {% if request.design_mode %}is-editor-mode{% endif %}'
            {% if desktop_layout contains 'grid' %}
              desktop-disabled
            {% endif %}
            {% if mobile_layout contains 'column' %}
              mobile-disabled
            {% endif %}
          >
            <div
              slider-grid-track
              class='slider-grid-track slider-grid__d-{{desktop_layout}} {% if mobile_layout contains 'carousel' %}slider-grid__m-slideshow{% else %}slider-grid__m-{{mobile_layout}}{% endif %}'
            >
              {%- for article in articles limit: posts_to_show -%}
                <div
                  class='slider-grid__slide'
                  slider-grid-slide
                  {% if mobile_layout == 'carousel' %}
                    index='{{ forloop.index0 }}'
                  {% endif %}
                >
                  {%- render 'article-card',
                    type: 'full',
                    article: article,
                    img_ratio: 'nature',
                    show_read_more: show_read_more,
                    show_subheading: show_subheading,
                    show_comment_count: show_comment_count,
                    show_date: show_date,
                    show_author: show_author,
                    show_tags: show_tags,
                    selected_tags: selected_tags,
                    tags_position: tags_position,
                    collapse_extra_tags: collapse_extra_tags,
                    layout: 'desktop',
                    color_post_background: color_post_background
                  -%}
                </div>
              {%- endfor -%}
            </div>

            {% if mobile_layout == 'carousel' %}
              <div class='slider-grid__dots'>
                {%- for article in articles limit: posts_to_show -%}
                  <div
                    class='solid-dots-carousel__solid-dot {% if forloop.index == 1 %}is-primary{% endif %}'
                    index='{{ forloop.index0 }}'
                    slider-grid-dot
                  >
                    <div class='solid-dots-carousel__solid-dot-circle'></div>
                  </div>
                {%- endfor -%}
              </div>
            {% endif %}
          </slider-grid>
        {% endif %}

        {% if mobile_layout == 'slideshow' %}
          <carousel-component
            class='card-carousel articles-slideshow'
            data-section-id='{{ section.id }}'
            with-stop-on-hover
            data-draggable
            data-align='start'
            data-axis='x'
            data-contain-scroll='trimSnaps'
          >
            <div class='card-carousel__viewport embla articles-slideshow__image' data-carousel-viewport>
              <div class='card-carousel__container' data-carousel-container>
                {%- for article in articles limit: posts_to_show -%}
                  <div class='card-carousel__slide'>
                    {%- render 'article-card',
                      type: 'image',
                      article: article,
                      img_ratio: 'nature',
                      show_read_more: show_read_more,
                      show_subheading: show_subheading,
                      show_comment_count: show_comment_count,
                      show_date: show_date,
                      show_author: show_author,
                      show_tags: show_tags,
                      selected_tags: selected_tags,
                      tags_position: tags_position,
                      collapse_extra_tags: collapse_extra_tags,
                      layout: 'mobile',
                      color_post_background: color_post_background
                    -%}
                  </div>
                {%- endfor -%}
              </div>
            </div>

            <carousel-dots
              class='carousel articles-slideshow__details {% if color_post_background %} articles-slideshow__details--with-background {% endif %}'
              data-contain-scroll='keepSnaps'
              is-draggable
              data-draggable
              data-align='center'
              data-in-view-threshhold='1'
              data-axis='x'
              change-slide-on-scroll='true'
            >
              <div
                class='carousel__viewport embla'
                data-carousel-viewport
              >
                <div
                  class='carousel__container'
                  data-carousel-container
                >
                  {%- for article in articles limit: posts_to_show -%}
                    <carousel-dot
                      class='carousel__slide'
                      tabindex='0'
                      data-dot-index='{{ forloop.index0 }}'
                    >
                      {%- render 'article-card',
                        type: 'details',
                        article: article,
                        img_ratio: 'nature',
                        show_read_more: show_read_more,
                        show_subheading: show_subheading,
                        show_comment_count: show_comment_count,
                        show_date: show_date,
                        show_author: show_author,
                        show_tags: show_tags,
                        selected_tags: selected_tags,
                        tags_position: tags_position,
                        collapse_extra_tags: collapse_extra_tags,
                        layout: 'mobile',
                        color_post_background: color_post_background
                      -%}
                    </carousel-dot>
                  {%- endfor -%}
                </div>
              </div>

              {% if articles.size > 1 %}
                <div class='articles-slideshow__arrows {% if color_post_background %}articles-slideshow__arrows--on-background{% endif %}'>
                  <carousel-button
                    class='carousel-btn'
